{
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "backend/functions",
      "runtime": "nodejs20"
    }
  ],
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm --prefix frontend run build"
    ]
  }
}